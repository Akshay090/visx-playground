{
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "target": "esnext",
    "noEmit": true,
    "moduleResolution": "node",
    "module": "esnext",
    "noUnusedParameters": true,
    "isolatedModules": true,
    "lib": ["dom", "es2017"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      // name_of_alias: [real_url_of_directory]
      "@components/*": ["./src/components/*"],
      "@modules/*": ["./src/modules/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@store/*": ["./src/store/*"],
      "@customTypes/*": ["src/customTypes/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
